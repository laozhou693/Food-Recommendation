.container {
  background-color: #f8f9fa;
  min-height: 100vh;
}

.search-bar {
  display: flex;
  padding: 20rpx 30rpx;
  background: linear-gradient(135deg, #07C160, #05a14e);
  align-items: center;
}

.search-bar input {
  flex: 1;
  height: 80rpx;
  padding: 0 30rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #333;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.search-bar button {
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 20rpx;
  background-color: #fff;
  color: #07C160;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.filter-bar {
  display: flex;
  padding: 20rpx 30rpx;
  background-color: #fff;
  position: sticky;
  top: 0;
  z-index: 10;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  line-height: 1rpx;
}

.filter-item {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  font-size: 26rpx;
  color: #666;
}

.arrow {
  width: 24rpx;
  height: 24rpx;
  margin-left: 8rpx;
  opacity: 0.7;
}

.sort-options {
  display: flex;
  align-items: center;
}

.sort-options text {
  margin-left: 25rpx;
  font-size: 26rpx;
  color: #888;
  position: relative;
}

.sort-options .active {
  color: #07C160;
  font-weight: bold;
}

.sort-options .active::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background-color: #07C160;
  border-radius: 2rpx;
}

.food-list {
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.food-item {
  display: flex;
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.3s ease;
}

.food-item:active {
  transform: scale(0.98);
}

.food-image {
  width: 240rpx;
  height: 240rpx;
  object-fit: cover;
}

.food-info {
  flex: 1;
  padding: 25rpx;
  display: flex;
  flex-direction: column;
}

.food-name {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.food-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 15rpx;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.food-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.food-tags text {
  font-size: 22rpx;
  color: #07C160;
  background-color: rgba(7, 193, 96, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  margin-right: 12rpx;
  margin-bottom: 10rpx;
}

.price-comparison {
  display: flex;
  margin-bottom: 15rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  padding: 15rpx;
}

.platform-price {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.platform-logo {
  width: 44rpx;
  height: 44rpx;
  margin-right: 10rpx;
  border-radius: 8rpx;
}

.platform-price text {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff4d4f;
}

.food-meta {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #999;
  margin-top: auto;
}

