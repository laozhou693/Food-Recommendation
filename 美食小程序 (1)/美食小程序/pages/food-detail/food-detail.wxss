.container {
  background-color: #f8f9fa;
  min-height: 100vh;
}

.food-image {
  width: 100%;
  height: 400rpx;
  object-fit: cover;
}

.food-info {
  padding: 30rpx;
  background-color: #fff;
  margin: 20rpx 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.food-name {
  font-size: 42rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.food-rating {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
  font-size: 30rpx;
  color: #ff9900;
}

.distance {
  margin-left: 30rpx;
  color: #666;
  font-size: 28rpx;
}

.food-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 25rpx;
}

.food-tags text {
  font-size: 26rpx;
  color: #07C160;
  background-color: rgba(7, 193, 96, 0.1);
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
}

.food-desc {
  font-size: 30rpx;
  color: #666;
  line-height: 1.6;
  padding: 15rpx 0;
  border-top: 1rpx dashed #eee;
  border-bottom: 1rpx dashed #eee;
  margin: 20rpx 0;
}

.price-section {
  background-color: #fff;
  margin: 20rpx 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  padding: 30rpx;
  color: #333;
  background-color: #f9f9f9;
}

.price-comparison {
  display: flex;
  padding: 0;
}

.platform-card {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  transition: all 0.3s ease;
}

.platform-card:active {
  background-color: #f5f5f5;
}

.platform-card:first-child {
  border-right: 1rpx solid #eee;
}

.platform-logo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
  margin-bottom: 25rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.price {
  font-size: 42rpx;
  font-weight: bold;
  color: #ff4d4f;
  margin-bottom: 25rpx;
}

.action {
  font-size: 28rpx;
  color: #07C160;
  padding: 12rpx 40rpx;
  border: 1rpx solid #07C160;
  border-radius: 40rpx;
  transition: all 0.3s ease;
}

.platform-card:active .action {
  background-color: #07C160;
  color: #fff;
}

.store-section {
  background-color: #fff;
  margin: 20rpx 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.store-info {
  padding: 30rpx;
  font-size: 28rpx;
  color: #666;
}

.store-info text {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
  line-height: 1.6;
}

.store-info text::before {
  content: '';
  display: inline-block;
  width: 8rpx;
  height: 8rpx;
  background-color: #07C160;
  border-radius: 50%;
  margin-right: 15rpx;
}

.back-to-top {
  position: fixed;
  right: 40rpx;
  bottom: 120rpx;
  width: 80rpx;
  height: 80rpx;
  background-color: rgba(7, 193, 96, 0.9);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.back-to-top.show {
  opacity: 1;
}

.back-to-top image {
  width: 40rpx;
  height: 40rpx;
}

.favorite-btn {
  position: absolute;
  top: 360rpx;
  right: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 120rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  z-index: 10;
}

.favorite-btn.favorited {
  background-color: rgba(255, 77, 79, 0.1);
}

.favorite-icon {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 8rpx;
}

.favorite-btn text {
  font-size: 24rpx;
  color: #666;
}

.favorite-btn.favorited text {
  color: #ff4d4f;
  font-weight: bold;
}