/* 基础样式 */
.container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

/* 用户卡片 */
.user-card {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: linear-gradient(135deg, #07C160, #05a14e);
  margin-bottom: 20rpx;
  color: #fff;
  position: relative;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 25rpx;
  border: 4rpx solid rgba(255,255,255,0.3);
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.user-info {
  flex: 1;
}

.username {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.phone {
  font-size: 26rpx;
  opacity: 0.9;
}

.login-btn {
  background-color: #fff;
  color: #07C160;
  border-radius: 40rpx;
  font-size: 28rpx;
  padding: 0 40rpx;
  height: 70rpx;
  line-height: 70rpx;
  margin: 0;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

/* 收藏区域 */
.favorite-section {
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  margin: 0;
  padding: 0 30rpx 30rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0,0,0,0.03);
}

.section-header {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  position: relative;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.count {
  font-size: 28rpx;
  color: #999;
  margin-left: 12rpx;
}

.edit-btn {
  position: absolute;
  right: 0;
  font-size: 28rpx;
  color: #07C160;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  background-color: rgba(7,193,96,0.1);
}

/* 收藏列表 */
.favorite-list {
  max-height: 65vh;
}

.favorite-item {
  display: flex;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s;
}

.favorite-item:active {
  background-color: #fafafa;
}

.item-content {
  flex: 1;
  display: flex;
}

.food-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  margin-right: 25rpx;
  object-fit: cover;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 10rpx 0;
}

.food-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  line-height: 1.4;
}

.meta-info {
  display: flex;
  align-items: center;
  margin: 15rpx 0;
}

.rating {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.star-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 6rpx;
}

.rating text {
  font-size: 26rpx;
  color: #ff9900;
  font-weight: bold;
}

.category-tag {
  font-size: 24rpx;
  color: #07C160;
  background-color: rgba(7,193,96,0.1);
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.price-range {
  font-size: 26rpx;
  color: #ff4d4f;
  font-weight: 500;
}

.delete-btn {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

.delete-icon {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.5;
  transition: all 0.3s;
}

.delete-btn:active .delete-icon {
  opacity: 1;
  transform: scale(1.1);
}

/* 空状态 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0 120rpx;
}

.empty-image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.sub-tip {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 50rpx;
}

.browse-btn {
  background: linear-gradient(135deg, #07C160, #05a14e);
  color: #fff;
  border-radius: 40rpx;
  font-size: 30rpx;
  padding: 0 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  box-shadow: 0 8rpx 20rpx rgba(7,193,96,0.2);
  transition: all 0.3s;
}

.browse-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}