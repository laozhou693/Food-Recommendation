{
  "ConnectionStrings": {
    "MongoDB": "mongodb://localhost:27017/"
  },
  "MongoDB": {
    "ConnectionString": "mongodb://localhost:27017/",
    "DatabaseName": "food_recommendation_db"
  },
  "MongoCrawler": {
    "PythonPath": "python",
    "ScriptPath": "PythonCrawler/mongodb_crawler.py",
    "EleDataPath": "PythonCrawler/ele-data.xls",
    "MeituanDataPath": "PythonCrawler/meituan-data.xls"
  },
  "Jwt": {
    "Key": "your_secret_key_here_minimum_16_characters_long",
    "Issuer": "food_recommendation_system",
    "Audience": "food_recommendation_users",
    "ExpireDays": 7
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Crawler": {
    "ScheduleIntervalHours": 6,
    "EnableAutoUpdate": true
  },
  "AllowedHosts": "*",
  "Cors": {
    "Origins": [
      "http://localhost:3000",
      "https://localhost:3000"
    ]
  },
  "FileStorage": {
    "ImageUploadPath": "wwwroot/images",
    "MaxFileSizeMB": 5
  },
  "ApplicationSettings": {
    "DefaultRadius": 5,
    "MaxSearchResults": 100,
    "DefaultSearchLimit": 20,
    "EnableDetailedErrors": true
  }
}