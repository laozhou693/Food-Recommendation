/* Âä†ËΩΩÁä∂ÊÄÅÊ†∑Âºè */
.loading, .no-more {
  text-align: center;
  padding: 40rpx;
  font-size: 28rpx;
  color: #999;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading image {
  margin-bottom: 15rpx;
}

.no-more {
  position: relative;
}

.no-more::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 60rpx;
  right: 60rpx;
  height: 1rpx;
  background-color: #eee;
  z-index: 1;
}

.no-more text {
  position: relative;
  z-index: 2;
  background-color: #f8f9fa;
  padding: 0 30rpx;
}